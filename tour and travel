int n;
string place[20];
void addPlace()
{
	cout<<"how many palce have you add to the reccomended place\n";
	cin>>n;
	cout<<"enter name of place\n";
	for(int i=0;i<n;i++)
	{
		cin.ignore();
		getline(cin,place[i]);
	}

}
void newPlace()
{
	for(int i=0;i<n;i++)
	{
		cout<<(i+6)<<". "<<place[i];
		cout<<endl;
	}
}
