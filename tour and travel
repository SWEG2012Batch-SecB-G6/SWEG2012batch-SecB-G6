        float total1,total,total2;
    	cout<<"\nenter the distance of the tour cover: \n";
    	cin>>tourTOT[0].distance;
    	cout<<"enter the over all amount of the hotel coverage : \n";
        cin>>tourTOT[0].hotel_usage;
	    cout<<"enter the overall touring cost : \n";
	    cin>>tourTOT[0].tourCost;
	    cout<<"enter the transport cost : \n";
	    cin>>tourTOT[0].tranCOST;
        total1=tourTOT[0].distance*tourTOT[0].tranCOST;
        total2=tourTOT[0].hotel_usage+tourTOT[0].tourCost;
        total=total1+total2;
        return total;
}
