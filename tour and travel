// Function for creating a loading bar
void loadingBar()
{
    // 0 - black background,
    // A - Green Foreground
        system("color 0A");
    // Initialize char for printing
    // loading bar
    char a = 177, b = 219;

    cout<<"\n\n\n\n";
    cout<<"\n\n\n\n\t\t\t\t\t";
    cout<<" Loading...\n\n";
    cout<<"\t\t\t\t\t";

    // Print initial loading bar
    for (int i = 0; i < 26; i++)
        cout<<a;

    // Set the cursor again starting
    // point of loading bar
    cout<<"\r";
    cout<<"\t\t\t\t\t";

    // Print loading bar progress
    for (int i = 0; i < 26; i++) {
        cout<<b;

        // Sleep for 1 second
        Sleep(50);
    }
}
