    enter=getche();
    switch(enter)
    {
    case '1':
        system("CLS");
        adminsearch();
        break;
    case '2':
        system("CLS");
        addPlace();
        reccom();
        newPlace();
        break;
    case '3':
        system("CLS");
        //update();
        break;
    case '4':
        system("CLS");
        //deleteData();
        break;
    case '5':
        system("CLS");
        //TabularData();
        break;
    case '6'
           sortData();
           break;
    case '0':
        adminlogin();
        return;
    default :
