string UserChoice(){
   int UserInput=choice;
 if (UserInput==1){
        return destinationToVIsit[0];
    }
        else if (UserInput==2){
            return destinationToVIsit[1];
        }
            else if (UserInput==3){
                return destinationToVIsit[2];
            }
            else if  (UserInput==4){
                return destinationToVIsit[3];
            }
                    else {
                        cout<< "invalid choice\n";
                }

}

