                        cout<<"please enter again\n";
                        cin.clear();
                        cin.ignore();
                            goto reenter3;

                    }

    }
// Function to creating loading bar
void loadingBar()
{
    // 0 - black background,
    // A - Green Foreground
        system("color 0A");
    // Initialize char for printing
    // loading bar
    char a = 177, b = 219;

    cout<<"\n\n\n\n";
    cout<<"\n\n\n\n\t\t\t\t\t";
    cout<<" Loading...\n\n";
    cout<<"\t\t\t\t\t";

    // Print initial loading bar
    for (int i = 0; i < 26; i++)
        cout<<a;

    // Set the cursor again starting
    // point of loading bar
    cout<<"\r";
    cout<<"\t\t\t\t\t";

    // Print loading bar progress
    for (int i = 0; i < 26; i++) {
        cout<<b;

        // Sleep for 1 second
        Sleep(50);
    }
}
float  ticketcostB(calTOT calc)
{
        float total1,total,total2;
    	cout<<"\nenter the distance of the tour cover: \n";
    	cin>>tourTOT[0].distance;
    	cout<<"enter the over all amount of the hotel coverage : \n";
        cin>>tourTOT[0].hotel_usage;
	    cout<<"enter the overall touring cost : \n";
	    cin>>tourTOT[0].tourCost;
	    cout<<"enter the transport cost : \n";
	    cin>>tourTOT[0].tranCOST;
        total1=tourTOT[0].distance*tourTOT[0].tranCOST;
        total2=tourTOT[0].hotel_usage+tourTOT[0].tourCost;
        total=total1+total2;
        return total;
}
