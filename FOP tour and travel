string destinationToVIsit[5]={"Northern historic route" , "eastern route", "western route", "south central route"};

void Check(){
if( TourNum.Depature_Date.depdd &&  TourNum.return_Date.depdd>31 ||  TourNum.Depature_Date.depdd &&  TourNum.return_Date.depdd <=0)
{
       system("cls");
    cout<<"Day can not exceed from 31 and can not be negative or 0!\n please enter again. \n";
    Booking();
}
else if ( TourNum.Depature_Date.depmm &&  TourNum.return_Date.depmm >12 ||  TourNum.Depature_Date.depmm &&  TourNum.return_Date.depmm <=0){
        system("cls");
    cout<<"Month can not exceed from 12 and can not be negative or 0!\n please enter again. \n";
     Booking();
}
else if (TourNum.Depature_Date.depyy &&  TourNum.return_Date.depyy <2013 ||  TourNum.Depature_Date.depyy &&  TourNum.return_Date.depyy <=0){
           system("cls");
       cout<<"year can not be less from existing year and can not be negative or 0!\n please enter again. \n";
        Booking();
}
else
    cout<<"\n\n"<<system("pause");

}



void Booking(){
    Header();
    BookingError:
 //accepting depature date
      cout<<"please enter depature date: \n";
      cout<<"\tEnter depature day: ";
      cin>> TourNum.Depature_Date.depdd;
      cout<<"\tEnter depature month: ";
      cin>>TourNum.Depature_Date.depmm;
      cout<<"\tEnter depature year: ";
      cin>>TourNum.Depature_Date.depyy;
 //accepting return date
      cout<< "please enter return date: \n";
      cout<<"\tEnter return day: ";
      cin>> TourNum.return_Date.depdd;
      cout<<"\tEnter return month: ";
      cin>>TourNum.return_Date.depmm;
      cout<<"\tEnter return year: ";
      cin>>TourNum.return_Date.depyy;
if( TourNum.Depature_Date.depdd &&  TourNum.return_Date.depdd>31 ||  TourNum.Depature_Date.depdd &&  TourNum.return_Date.depdd <=0)
{
       system("cls");
    cout<<"Day can not exceed from 31 and can not be negative or 0!\n please enter again. \n";
    Booking();
}
else if ( TourNum.Depature_Date.depmm &&  TourNum.return_Date.depmm >12 ||  TourNum.Depature_Date.depmm &&  TourNum.return_Date.depmm <=0){
        system("cls");
    cout<<"Month can not exceed from 12 and can not be negative or 0!\n please enter again. \n";
     Booking();
}
else if (TourNum.Depature_Date.depyy &&  TourNum.return_Date.depyy <2013 ||  TourNum.Depature_Date.depyy &&  TourNum.return_Date.depyy <=0){
           system("cls");
       cout<<"year can not be less from existing year and can not be negative or 0!\n please enter again. \n";
        Booking();
}
else
{
    system("pause");
}


    cout << " Enter number of visitors you are booking : ";
    cin>> TourNum.visitors;

for(int i=0; i<TourNum.visitors; i++)
     {
     cout<<i+1<<"th traveller"<<endl;
     cout<< " full name: ";
     cin.get(TourNum.Full_Name,45);
     cout<<" Address: ";
     cin.get(TourNum.Address, 50);
     cout<<" phone number: ";
     cin>> TourNum.Phone_Number[10];
     }

    cout<< "your email: ";
     cin>> TourNum.Email;
     system("cls");
     Header();
     cout<< "what type of room do you want \n";
  for (int i=0; i<5; ++i)
    {
     cout<<i+1<< ". "<<Room_type[i]<< endl;
    }

cout << "room...";
cin>> TourNum.Room;

     cout<< "how many rooms/tents do you need \n";
     cin>>TourNum.RoomNumber;

     cout<< " Booked successfully!\n"<< "your reservation code will be sent soon\n";
          //here there is a code which gives a random number
     cout<< "your reservation code is: "<< reserveCode()<< endl;
     cout<<"which way do you wanna pay:\n ";
         //there is a function here which displays ways to pay
     cout<< "you have paid successfully : "<< reserveCode()<< endl;
     cout<< "Thank you for choosing us\n";


}





