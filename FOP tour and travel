int main ()
{
     MainMenuScreen();
    cout<<"press : ";
    enter = getche();
    cout<<endl;
     system("pause");
     system("color 07");
    switch(enter)
    {
    case '1':
        system("CLS");
        adminlogin();
        break;
    case '2':
        system("CLS");
        userlogin();
        break;
    case 'e':
        system("CLS");
        exit(1);
        break;
    case 'E':
        system("CLS");
        exit(1);
        break;
    }
    return 0;
}

