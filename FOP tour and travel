void deletes(bahiTEchres bahir[],int num){


 int del,deleterow;

  cout<<"press 1 to delete\n";
  cin>>del;

  if (del==1){

      cout<<"enter the row number you want to delete";
      deleterow1:cin>>deleterow;

      for(int i=0;i<num;i++){

      if(deleterow==bahir[i].row){
             		bahir[i].name=bahir[i+1].name;

             		bahir[i].email=bahir[i+1].email;

             		bahir[i].date1.depDay=bahir[i+1].date1.depDay;

             		bahir[i].date1.depmm=bahir[i+1].date1.depmm;

             		bahir[i].date1.depyy=bahir[i+1].date1.depyy;

             		bahir[i].date1.retday=bahir[i+1].date1.retday;

             		bahir[i].date1.retmm=bahir[i+1].date1.retmm;

             		bahir[i].date1.retyy=bahir[i+1].date1.retyy;

             		bahir[i].age=bahir[i+1].age;
             		bahir[i].sex=bahir[i+1].sex;

             	bahir[i].Tranum=bahir[i+1].Tranum;
                bahir[i].numOFroom=bahir[i+1].numOFroom;
   		       bahir[i].typeOfroom=bahir[i+1].typeOfroom;


cout<<endl;

cout<<"the updated output is\n";
int num1=num-1;
yourEntry (bahir,num1);
      }

}}
}



