void yourEntry(bahiTEchres bahir[],int num){
    int NAME_EMAIL,EMAIL_TRAN,TRAN_TYPEROOM,TYPEROOM_NUROOM;//space between each mark and grade


	cout<<"roll no"<<setw(8)<<"Name"<<setw(20)<<"E-mail"<<setw(20)<<"transportation "<<setw(20)<<"Type of room "
	<<setw(20)<<"Amount of room"<<setw(10)<<"Sex"<<setw(10)<<"Age"<<setw(20)<<"departure date "<<setw(20)<<"returning date ";
	cout<<endl;

       for(int i=0;i<num;i++)
       {

 NAME_EMAIL= 22- bahir[i].name.length();
EMAIL_TRAN = 20 - bahir[i].email.length();
TRAN_TYPEROOM=25 - bahir[i].Tranum.length();
TYPEROOM_NUROOM=25 - bahir[i].typeOfroom.length();
    cout<<bahir[i].row<<setw(13)<<bahir[i].name<<setw(NAME_EMAIL)<<bahir[i].email<<setw(EMAIL_TRAN)<<bahir[i].Tranum
       	<<setw(TRAN_TYPEROOM)<<bahir[i].typeOfroom<<setw(TYPEROOM_NUROOM)<< bahir[i].numOFroom<<setw(15)
       	<<bahir[i].sex<<setw(10)<<bahir[i].age<<setw(15)
       	<<bahir[i].date1.depDay<<"/"<<bahir[i].date1.depmm<<"/"<<bahir[i].date1.depyy
        <<setw(15)<<bahir[i].date1.retday<<"/"<<bahir[i].date1.retmm<<"/"<<bahir[i].date1.retyy;
	 cout<<endl;

}

}
